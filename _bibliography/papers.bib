	author = {Li, Weiwei and Zhu, Bonan and He, Qian and Borisevich, Albina Y. and Yun, Chao and Wu, Rui and Lu, Ping and Qi, Zhimin and Wang, Qiang and Chen, Aiping and Wang, Haiyan and Cavill, Stuart A. and Zhang, Kelvin H. L. and MacManus‐Driscoll, Judith L.},
	year = {2020},
	keywords = {ABO3 perovskite oxides, ferromagnetic insulators, interface engineering, manganite thin films, octahedral proximity effect, octahedron rotation},
	pages = {1901606},
}

